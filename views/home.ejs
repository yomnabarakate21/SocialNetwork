<<html lang="en">

  <head>
    <meta charset="UTF-8">
    <title>Home sweet Home</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="/public/assets/home.js" type="text/javascript">
    </script>
  </head>

  <body>
    <% include partials/nav.ejs %>
      <label id="id_label" hidden><%=data[0].user_id%></label>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" style="padding-top:30px">
          <% if (message.length > 0) { %>
            <div class="alert alert-danger col-sm-12">
              <%= message %>
            </div>
            <% } else {%>
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title"><%=data[0].firstname%>, <%=data[0].lastname%></h3>
                </div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://localhost:4001/public/images/upload_images/<%=data[0].profile_picture%>" class="img-circle img-responsive"> </div>
                    <div class=" col-md-9 col-lg-9 ">
                      <table class="table table-user-information">
                        <tbody>
                          <tr>
                            <td>User Name:</td>
                            <td>
                              <%=data[0].nickname%>
                            </td>
                          </tr>
                          <tr>
                            <td>Mobile:</td>
                            <td>
                              <%=data[0].phone_number1%>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                      <div class=posts>
                        <div id="post_div">
                          <h2>What's New? </h2>
                          <input id=caption></input>
                          <br>
                          <select name="privacy" id="privacy">
                            <option value="1">Public</option>
                               <option value="0">Private</option>
                              </select>
                          <br>
                          <button type="button" id="post_btn">POST</button>
                        </div>
                        <h2>POSTS</h2>
                        <ul>
                          <%if (postsdata.length>0){
                        for(var i=0;i<postsdata.length;i++){%>
                            <li>
                              <a href="/friend/profile/<%=data[0].user_id%>/<%=postsdata[i].poster_id %>">

                                <%=postsdata[i].firstname %>
                                  <%=postsdata[i].lastname %>
                              </a>
                              <br>
                              <%=postsdata[i].caption %>
                            </li>
                            <%}}
                          else{%>
                              <h4>NO POSTS TO DISPLAY! </h4>
                              <%} %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
        </div>
      </div>

  </body>

  </html>
