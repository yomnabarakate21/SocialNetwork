<html lang="en">

  <head>
    <meta charset="UTF-8">
    <title>Home sweet Home</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="text/css" href="/public/assets/css/homeprofile.css" />
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="/public/assets/home.js" type="text/javascript">
    </script>

  </head>

  <body>
    <% include partials/nav.ejs %>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" style="padding-top:30px">
          <% if (message.length > 0) { %>
            <div class="alert alert-danger col-sm-12">
              <%= message %>
            </div>
            <% } else {%>
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title"><%=data[0].firstname%>, <%=data[0].lastname%></h3>
                </div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://localhost:4001/public/images/upload_images/<%=data[0].profile_picture%>" class="img-circle img-responsive"> </div>
                    <div class=" col-md-9 col-lg-9 ">
                      <table class="table table-user-information">
                        <tbody>
                          <tr>
                            <td>User Name:</td>
                            <td>
                              <%=data[0].nickname%>
                            </td>
                          </tr>
                          <tr>
                            <td>Mobile:</td>
                            <td>
                              <%=data[0].phone_number1%>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                      <div class=posts>
                        <div id="post_div">
                          <h2>What's New? </h2>
                          <form enctype="multipart/form-data" action="/post" method="POST">
                            <input type="text" value="<%=data[0].user_id%>" for="id_label" name="id_label"id="id_label" hidden></input>
                          <input for="caption" name="caption" id="caption"></input>
                          <br>
                          <select name="privacy" id="privacy">
                            <option value="1">Public</option>
                               <option value="0">Private</option>
                              </select>
                              <h4>Media</h4>
                              <input type="file" id='postpic' name="postpic"/>
                          <br>
                          <button type="submit" id="postbtn">POST</button>
                        </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

                <div id="posts-div" class=posts>
                        <h2>POSTS</h2>
                        <ul id="posts">
                          <%if (postsdata.length>0){
                        for(var i=0;i<postsdata.length;i++){%>
                            <li>
                              <a id="post-a" href="/friend/profile/<%=postsdata[i].poster_id %>">
                                <img id="post-img" alt="Poster Pic" src="http://localhost:4001/public/images/upload_images/<%=postsdata[i].profile_picture%>" class="small-img" >
                                <%=postsdata[i].firstname %>
                                  <%=postsdata[i].lastname %>
                              </a>
                              <br>
                              <span id="post-caption"
                              <%=postsdata[i].caption %>
                            </span>
                            </li>
                            <%}}
                          else{%>
                              <h4>NO POSTS TO DISPLAY! </h4>
                              <%} %>
                        </ul>

              <% } %>
</div>
</div>
</div>
  </body>

  </html>
